{
	"sEcho": "{m:transaction()}",
	"iTotalRecords": "{numberOfMedias}",
	"iTotalDisplayRecords": "{numberOfMedias}",
	"iNumberOfRecords": "{medias->f:count()}",
	"aaData": [
<f:for each="{medias}" as="media" key="number" iteration="iterator">
{

	<m:grid.row media="{media}" />,

	"__buttons":

		<m:format.json>
			<f:link.action action="edit" arguments="{media : media.uid}"
			class="btn btn-grid btn-edit" additionalAttributes="{data-uid: '{media.uid}'}"><i class="icon-pencil"></i></f:link.action>
			<f:link.action action="delete" arguments="{media : media.uid, format: 'json'}"
			class="btn btn-grid btn-delete" additionalAttributes="{data-uid: '{media.uid}'}"><i class="icon-trash"></i></f:link.action>
		</m:format.json>,

	"__number":
		<m:format.json>
			<m:table.rowNumber value="{number}" offset="{pager.offset}" />
		</m:format.json>

	}<f:if condition="{iterator.isLast}"><f:then></f:then><f:else>,</f:else></f:if>
</f:for>
	]
}
{namespace m=TYPO3\CMS\Media\ViewHelpers}