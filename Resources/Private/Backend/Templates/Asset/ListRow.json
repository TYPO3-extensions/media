{
	"sEcho": "{media:transaction()}",
	"iTotalRecords": "{numberOfAssets}",
	"iTotalDisplayRecords": "{numberOfAssets}",
	"iNumberOfRecords": "{assets->f:count()}",
	"aaData": [
<f:for each="{assets}" as="asset" key="number" iteration="iterator">
{

	<media:grid.row asset="{asset}" />,

	"__buttons":

		<media:format.json>
			<f:if condition="{media:isRtePlugin(plugin: 'linkMaker')}">
				<f:link.action action="linkMaker" arguments="{asset : asset.uid}"
				class="btn-linkMaker" additionalAttributes="{data-uid: '{asset.uid}'}">
					<media:sprite name="apps-pagetree-page-shortcut-external-root" /></f:link.action>
			</f:if>
			<f:if condition="{media:isRtePlugin(plugin: 'imageMaker')}">
				<f:link.action action="imageMaker" arguments="{asset : asset.uid}"
				class="btn-imageMaker" additionalAttributes="{data-uid: '{asset.uid}'}">
					<media:sprite name="mimetypes-x-content-text-picture" /></f:link.action>
			</f:if>
			<a href="alt_doc.php?returnUrl=/typo3/mod.php?M=user_MediaM1&edit[sys_file][{asset.uid}]=edit" data-uid="{asset.uid}" class="btn-edit">
				<media:sprite name="actions-document-open" /></a>
			<f:link.action action="delete" arguments="{asset : asset.uid, format: 'json'}"
				class="btn-delete" additionalAttributes="{data-uid: '{asset.uid}'}">
				<media:sprite name="actions-edit-delete" />
			</f:link.action>
		</media:format.json>,

	"__checkbox":
		<media:format.json>
			<media:table.checkbox index="{number}" object="{asset}" />
		</media:format.json>,
	"__number":
		<media:format.json>
			<media:table.rowNumber index="{number}" offset="{pager.offset}" />
		</media:format.json>

	}<f:if condition="{iterator.isLast}"><f:then></f:then><f:else>,</f:else></f:if>
</f:for>
	]
}
{namespace media=TYPO3\CMS\Media\ViewHelpers}